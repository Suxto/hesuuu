<!--index.wxml-->
<view>
  <map style="position: relative; left: 50rpx; top: -2rpx; width: 650rpx; height: 480rpx; display: block; box-sizing: border-box" 
  show-location="true" 
  id="mapp"
  class="map"
  markers="{{markers}}"
  scale="{{scale}}"
  longitude="{{longitude}}"
  latitude="{{latitude}}"
  ></map>
  <button type="primary" bindtap="showAll" style="position: relative; left: -154rpx; top: -2rpx; width: 344rpx; height: 78rpx; display: block; box-sizing: border-box">
    全览
  </button>

  <button bindtap="Locate" style="position: relative; left: 174rpx; top: -80rpx; width: 302rpx; height: 78rpx; display: block; box-sizing: border-box">
    定位
  </button>

</view>

<view>
<rich-text 
nodes=
"<h3 style='color:red;'>前方还有：{{left}} 人</h3><br><h3 style='color:red;'>检测速度：{{speed}} 人/分钟</h3>" 
style="position: relative; left: 45rpx; top: -10rpx">
</rich-text>
</view>
<button bindtap="bindtest">test</button>


